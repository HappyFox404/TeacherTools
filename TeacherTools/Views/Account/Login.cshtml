@model TeacherTools.ViewModels.Account.LoginModel

<form class="Login" asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <label class="header fx cr">Авторизация пользователя</label>
    <label class="nLogin fx rt">Логин</label>
    <input class="tLogin" type="text" asp-for="Login" autocomplete="off"/>
    <span class="vLogin fx lt" asp-validation-for="Login"></span>

    <label class="nPassword fx rt">Пароль</label>
    <input class="tPassword" type="password" asp-for="Password"/>
    <span class="vPassword fx lt" asp-validation-for="Password"></span>

    <div class="validation fx cr" asp-validation-summary="ModelOnly"></div>

    <input class="bLogin btn" type="submit" value="Войти"/>
    <input class="bRegister btn" type="button" value="Регистрация" onclick="window.location.href = '@Url.Action("Register")';"/>
</form>